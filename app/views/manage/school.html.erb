<h2>入学試験報告書　編集</h2>
<h2>入学試験報告書　削除</h2>

<%= form_tag('/manage_school_search_year') do %>
    <p>
    検索（部分一致）
    <br>
    <%= text_field_tag 'search[year]' , session[:search_year] %>
    <%= submit_tag '検索' %>
    </p>
  <% end %> 



<table>
  <thead>
    <tr>
      <th>状況</th>
      <th>生徒</th>
      <th>学校名</th>
      <th>学部</th>
      <th>学科</th>
      <th>コース</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% if %>
      <% @reportschools.each do |reportschool| %>
        <tr>
          <td><%= reportschool.status %></td>
          <td><%= reportschool.user.students[0].name %></td>
          <td><%= reportschool.gakkou %></td>
          <td><%= reportschool.gakubu %></td>
          <td><%= reportschool.gakka %></td>
          <td><%= reportschool.course %></td>
          <td><%= link_to '詳細', reportschool %></td>
          <td><%= link_to '編集', edit_reportschool_path(reportschool) %></td>
          <td><%= link_to '削除', reportschool, method: :delete, data: { confirm: '削除してもよろしいですか？' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

