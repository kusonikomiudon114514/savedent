<h2>入学試験報告書　編集</h2>
<h5>未読の報告書</h5>

<table class="table table-bordered">
  <thead>
    <tr>
    <th class="example" style="width:90px">　学校種　</th>
    <th class="example" style="width:150px">　　分野　　</th>
    <th class="example" style="width:150px">　学校名　</th>
    <th class="example" style="width:150px">　学部　</th>
    <th class="example" style="width:150px">　学科　</th>
    <th class="example" style="width:150px">　コース　</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
    <% @reportschools.each do |reportschool| %>
      <% if reportschool.check == false %>
      <tr>
        <td><%= reportschool.type.name %></td>
        <td><%= reportschool.field.name %></td>
        <td><%= reportschool.gakkou %></td>
        <td><%= reportschool.gakubu %></td>
        <td><%= reportschool.gakka %></td>
        <td><%= reportschool.course %></td>
        <td style="width:30px"><%= link_to '詳細', reportschool %></td>
        <td style="width:30px"><%= link_to '編集', edit_reportschool_path(reportschool) %></td>
        <td style="width:30px"><%= link_to '削除', reportschool, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<h2>入学試験報告書　削除</h2>

<%= form_tag('/manage_school_search_year') do %>
    <p>
    年度検索
    <br>
    <%= number_field_tag 'search[year]' , session[:search_year] %>
    <%= submit_tag '検索' %>
    </p>
  <% end %> 

  <%= form_tag('/manage_school_manydestory') do %>
    <input type="submit" name="nendo" value="一括削除">
    <%= hidden_field_tag 'search[year]' , session[:search_year] %>
    <% end %> 

<table class="table table-bordered">
  <thead>
    <tr>
      <th class="example" style="width:90px">生徒</th>
      <th class="example" style="width:150px">　学校名　</th>
      <th class="example" style="width:150px">　学部　</th>
      <th class="example" style="width:150px">　学科　</th>
      <th class="example" style="width:150px">　コース　</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% if @reportschools.present? %>
      <% @reportschools.each do |reportschool| %>
        <tr>
          <td><%= reportschool.user.students[0].name %></td>
          <td><%= reportschool.gakkou %></td>
          <td><%= reportschool.gakubu %></td>
          <td><%= reportschool.gakka %></td>
          <td><%= reportschool.course %></td>
          <td style="width:30px"><%= link_to '詳細', reportschool %></td>
          <td style="width:30px"><%= link_to '編集', edit_reportschool_path(reportschool) %></td>
          <td style="width:30px"><%= link_to '削除', reportschool, method: :delete, data: { confirm: '削除しますか？' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

