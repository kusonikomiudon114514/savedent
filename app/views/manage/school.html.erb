<details>

<summary>就職試験受験報告書未読の報告書</summary>
<table class="table table-bordered">
  <thead>
  <tr>
  <th class="example" style="width:250px">生徒</th>
  <th class="example" style="width:250px">受験日</th>
  <th class="example" style="width:250px">事業所名</th>
  <th class="example" style="width:250px">所在地</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if @reportjobs.present?%>
    <% @reportjobs.each do |reportjob| %>
    <% if reportjob.check == false %>
      <tr align="center">
        <td><%= reportjob.user.students[0].name %></td>
        <td><%= reportjob.day %></td>
        <td><%= reportjob.zigyousyo %></td>
        <td><%= reportjob.syozaiti %></td>

        <td style="width:30px"><%= link_to '詳細', reportjob %></td>
        <td style="width:30px"><%= link_to '編集', edit_reportjob_path(reportjob) %></td>
        <td style="width:30px"><%= link_to '削除', reportjob, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
    <% end %>
  <% end %>  
  </tbody>
</table>
</details>

