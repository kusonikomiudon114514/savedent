<h1><学校種></h1>

<br>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>学校種</th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.name %></td>
        <td><center><%= link_to '詳細', type %></center></td>
        <td><center><%= link_to '編集', edit_type_path(type) %></center></td>
        <td><center><%= link_to '削除', type, method: :delete, data: { confirm: 'Are you sure?' } %></center></td>
      </tr>
    <% end %>
  </tbody>
</table>

