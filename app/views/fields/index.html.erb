<p id="notice"><%= notice %></p>

<h1>分野</h1>

<table>
  <thead>
    <tr>
      <th>分野</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fields.each do |field| %>
      <tr>
        <td><%= field.name %></td>
        <td><%= link_to '詳細', field %></td>
        <td><%= link_to '編集', edit_field_path(field) %></td>
        <td><%= link_to '削除', field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<table>
<td><pre style="font-size: 13px;"><%= link_to '新規作成', new_field_path %></td>
</table>
