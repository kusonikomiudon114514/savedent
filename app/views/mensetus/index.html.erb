<h1>面接練習サポートシステム</h1>

<p>あなたの面接予定</p>

<p id="notice"><%= notice %></p>

<h1>面接予定</h1>

<%= month_calendar events: @mensetus do |date, mensetus| %>
  <%= date %>
<% end %>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @mensetus.each do |mensetu| %>
      <tr>
        <td><%= mensetu.name %></td>
        <td><%= mensetu.start_time %></td>
        <td><%= link_to 'Show', mensetu %></td>
        <td><%= link_to 'Edit', edit_mensetu_path(mensetu) %></td>
        <td><%= link_to 'Destroy', mensetu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '面接予定追加', new_mensetu_path %>

<br><br>

<p>面接OKの先生</p>
<%= form_tag('/mensetus_status_search') do %>
  <%= select_tag 'search[status]' , options_for_select(Status.all.map {|r| [r.name,r.id] }, ), include_blank: true %><%= submit_tag '検索' %>
 <% end %>

 <table>
 <thead>
   <tr>
     <th>Status</th>
     <th>名前</th>
     <th>日時</th>
     <th colspan="3"></th>
   </tr>
 </thead>

 <tbody>
   <% @mensetus.each do |mensetu| %>
     <tr>
       <td><%= mensetu.status.name %></td>
       <td><%= mensetu.name %></td>
       <td><%= mensetu.start_time %></td>
     </tr>
   <% end %>
 </tbody>
</table>

