<h1>面接練習サポートシステム</h1>

<p>あなたの面接予定</p>

<p id="notice"><%= notice %></p>

<%= link_to '面接予定追加', new_mensetu_path %>

<p>面接OKの先生</p>
<table>
  <thead>
    <tr>
      <th>状況</th>
      <th>名前</th>
      <th>日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @mensetus_ok_teacher.each do |mensetu| %>
      <tr>
        <td><%= mensetu.status %></td>
        <td><%= mensetu.name %></td>
        <td><%= mensetu.start_time %></td>
        <td><%= link_to '詳細', mensetu %></td>
        <td><%= link_to '編集', edit_mensetu_path(mensetu) %></td>
        <td><%= link_to '削除', mensetu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

