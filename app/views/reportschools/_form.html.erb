    <%= form.number_field :social, id: :reportschool_social %>
  </div>

  <div class="field">
    <%= form.label :理科（分） %>
    <%= form.number_field :science, id: :reportschool_science %>
  </div>

  <div class="field">
    <%= form.label :英語（分） %>
    <%= form.number_field :english, id: :reportschool_english %>
  </div>

  <div class="field">
    <%= form.label :問題の内容 %>
    <%= form.text_area :detail, id: :reportschool_detail %>
  </div>

  <h2>推薦入試</h2>

  <div class="field">
    <%= form.label :形態 %>
