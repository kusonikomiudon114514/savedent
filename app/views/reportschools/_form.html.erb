<%= form_with(model: reportschool, local: true) do |form| %>
  <% if reportschool.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(reportschool.errors.count, "error") %> prohibited this reportschool from being saved:</h2>

      <ul>
      <% reportschool.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :状況 %>
    <%= form.number_field :status, id: :reportschool_status %>
  </div>

  <div class="field">
    <%= form.label :学校種 %>
    <%= form.select :type_id, Type.all.map {|r| [r.name,r.id] } %>
  </div>

  <div class="field">
    <%= form.label :分野 %>
    <%= form.select :field_id, Field.all.map {|r| [r.name,r.id] } %>
  </div>

  <div class="field">
    <%= form.label :学校名 %>
    <%= form.text_field :gakkou, id: :reportschool_gakkou %>
  </div>

  <div class="field">
    <%= form.label :学部 %>
    <%= form.text_field :gakubu, id: :reportschool_gakubu %>
  </div>

  <div class="field">
    <%= form.label :学科 %>
    <%= form.text_field :gakka, id: :reportschool_gakka %>
  </div>

  <div class="field">
    <%= form.label :コース %>
    <%= form.text_field :course, id: :reportschool_course %>
  </div>

  <div class="field">
    <%= form.label :所在地 %>
    <%= form.text_field :syozaichi, id: :reportschool_syozaichi %>
  </div>

  <div class="field">
    <%= form.label :試験場 %>
    <%= form.text_field :shikennzyou, id: :reportschool_shikennzyou %>
  </div>

