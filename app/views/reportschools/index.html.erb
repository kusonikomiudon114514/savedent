      </td>
    <% end %> 
  </tr>
</table>

<table>
  <tr>
    <%= form_tag('/reportschools_search') do %>
      <th class="example2" style="width:90px">学校名</th>
      <br>
      <td>
        <%= text_field_tag 'search[gakkou]' , session[:search_gakkou] %>
        <%= submit_tag '検索' %>
      </td>
    <% end %> 

    <%= form_tag('/reportschools_saw_search') do %>
