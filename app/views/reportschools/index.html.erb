      <td>
        <%= select_tag 'search[place]' ,options_for_select(Place.all.map {|r| [r.todohuken,r.todohuken] } , {:selected => session[:search_place]}) , include_blank:true%>
        <%= submit_tag '検索' %>
      </td>
    <% end %> 
  </tr>
</table>

<table>
  <tr>
    <%= form_tag('/reportschools_type_search') do %>
