<h1>入試形態</h1>

<table>
  <thead>
    <tr>
      <th>入試形態</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exams.each do |exam| %>
      <tr>
        <td><%= exam.name %></td>
        <td><%= link_to '詳細', exam %></td>
        <td><%= link_to '編集', edit_exam_path(exam) %></td>
        <td><%= link_to '削除'', exam, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

