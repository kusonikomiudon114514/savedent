<p id="notice"><%= notice %></p>

<h1>就職試験受験報告書</h1>

<%= form_tag('/reportjobs_field_search') do %>
  <p>
  職種
  <br>
  <%= select_tag 'search[field]', options_for_select(Field.all.map {|r| [r.name,r.id] }, 0), include_blank: true %><%= submit_tag '検索' %>
  </p>
<% end %> 

<%= form_tag('/reportjobs_zigyousyo_search') do %>
  <p>
  事業所(完全一致)
  <br>
  <%= text_field_tag 'search[zigyousyo]' %><%= submit_tag '検索' %>
  </p>
<% end %> 

<%= form_tag('/books_search') do %>
  <p>
  検索(部分一致)
  <br>
  <%= text_field_tag 'search[title]' %><%= submit_tag '検索' %>
  </p>
<% end %> 

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>ユーザー</th>
      <th>受験日</th>
      <th>職種</th>
      <th>事業所名</th>
      <th>斡旋方法</th>
      <th>所在地</th>
      <th>試験会場</th>
      <th>受験者数</th>

      <th>筆記・時間</th>
      <th>適性・時間</th>
      <th>試験内容</th>
      
      <th>面接方法</th>
      <th>面接委員(人)</th>
      <th>面接時間</th>
      <th>質問内容</th>

      <th>作文の題</th>
      <th>文章量</th>
      <th>その他</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reportjobs.each do |reportjob| %>
      <tr>
        <td><%= reportjob.status %></td>
        <td><%= reportjob.user_id %></td>
        <td><%= reportjob.day %></td>
        <td><%= reportjob.field.name %></td>
        <td><%= reportjob.zigyousyo %></td>
        <td><%= reportjob.mediation.name %></td>
        <td><%= reportjob.syozaiti %></td>
        <td><%= reportjob.shikennzyou %></td>
        <td><%= reportjob.zyukennsyasuu %></td>

        <td><%= reportjob.zikan_ithihi %></td>
        <td><%= reportjob.zikan_ithite %></td>
        <td><%= reportjob.naiyou %></td>

        <td><%= reportjob.interview.name %></td>
        <td><%= reportjob.iin %></td>
        <td><%= reportjob.zikan_mensetsu %></td>
        <td><%= reportjob.shitsumon %></td>

        <td><%= reportjob.zikan_ithisa %></td>
        <td><%= reportjob.bunnsyouryou %></td>
        <td><%= reportjob.other %></td>

        <td><%= link_to '詳細', reportjob %></td>
        <td><%= link_to '編集', edit_reportjob_path(reportjob) %></td>
        <td><%= link_to '削除', reportjob, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_reportjob_path %>
