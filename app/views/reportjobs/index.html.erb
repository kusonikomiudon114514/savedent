<p id="notice"><%= notice %></p>

<h1>就職試験受験報告書</h1>

<%= form_tag('/reportjobs_field_search') do %>
  <p>
  職種
  <br>
  <%= select_tag 'search[field]', options_for_select(Field.all.map {|r| [r.name,r.id] },   {:selected => session[:search_field]}), include_blank: true %><%= submit_tag '検索' %>
  </p>
<% end %> 

<%= form_tag('/reportjobs_zigyousyo_search') do %>
  <p>
  事業所(完全一致)
  <br>
  <%= text_field_tag 'search[zigyousyo]' , session[:search_zigyousyo] %><%= submit_tag '検索' %>
  </p>
<% end %> 

<table border="1">
  <thead>
  <tr>
      <th>　受験日　</th>
      <th>　職種　</th>
      <th>　事業所名　</th>
      <th>　斡旋方法</th>
      <th>　所在地　</th>
      <th>　試験会場　</th>
      <th>　面接方法　</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reportjobs.each do |reportjob| %>
      <tr align="center">
        <td><%= reportjob.day %></td>
        <td><%= reportjob.field.name %></td>
        <td><%= reportjob.zigyousyo %></td>
        <td><%= reportjob.mediation.name %></td>
        <td><%= reportjob.syozaiti %></td>
        <td><%= reportjob.shikennzyou %></td>
        <td><%= reportjob.interview.name %></td>

        <td><%= link_to '　詳細', reportjob %></td>
        <td><%= link_to '　編集', edit_reportjob_path(reportjob) %></td>
        <td><%= link_to '　削除', reportjob, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_reportjob_path %>
