<p id="notice"><%= notice %></p>

<h1>       履歴書サポート        </h1>
<table class="table table-borderless">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>日付</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rirekisyos.each do |rirekisyo| %>
      <tr>
        <td><%= rirekisyo.title %></td>
        <td><%= rirekisyo.hizuke %></td>
        <td><%= link_to '閲覧', rirekisyo %></td>
        <td><%= link_to '編集', edit_rirekisyo_path(rirekisyo) %></td>
        <td><%= link_to '削除', rirekisyo, method: :delete, data: { confirm: '履歴書を削除しますか？' } %></td>
        <td><%= link_to '転送', rirekisyo_tenso_path(id: rirekisyo) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

