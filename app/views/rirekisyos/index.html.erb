<p id="notice"><%= notice %></p>
<div class="box9">
<h1><履歴書サポート></h1>

<br>

<table class="table table-striped table-bordered">
  <thead>
    <tr bgcolor="lightsteelblue">
      <th><center>タイトル</center></th>
      <th><center>日付</center></th>
    </tr>
  </thead>

  <tbody bgcolor="white">
    <% @rirekisyos.each do |rirekisyo| %>
      <tr>
        <td><center><%= rirekisyo.title %></center></td>
        <td><center><%= rirekisyo.hizuke %></center></td>
        <td><center><%= link_to '閲覧', rirekisyo %></center></td>
        <td><center><%= link_to '編集', edit_rirekisyo_path(rirekisyo) %></center></td>
        <td><center><%= link_to '削除', rirekisyo, method: :delete, data: { confirm: '履歴書を削除しますか？' } %></center></td>
        <td><center><%= link_to '転送', rirekisyo_tenso_path(id: rirekisyo) %></center></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<br>

<table>
<td><pre style="font-size: 20px;"><%= link_to '新規作成', new_rirekisyo_path %></td>
</table>
</div>
